from bokeh.plotting import figure, output_file, show
import matplotlib
import matplotlib.pyplot as plt
import numpy as np
import pandas as pd
from bokeh.models import ColumnDataSource
from bokeh.palettes import Spectral6
from bokeh.transform import factor_cmap
from numpy import genfromtxt

inputfile = input("Please input the path to your file.")
with open(inputfile) as csvfile:
    print("It worked!")
    myarray = genfromtxt(inputfile, delimiter=',')

# Scatterplot
# output to static HTML file
output_file("scatter.html")

p = figure(plot_width=400, plot_height=400)

# add a circle renderer with a size, color, and alpha
p.circle(myarray[:,0], myarray[:,1], size=10, color="navy", alpha=0.5)
p.circle(myarray[:,0], myarray[:,2], size=20, color='purple', alpha=0.5)
p.circle(myarray[:,0], myarray[:,3], size=15, color='orange', alpha=0.5)

# show the results
show(p)


'''
# Bar graph
output_file("bar_colormapped.html")

fruits = ['Apples', 'Pears', 'Nectarines', 'Plums', 'Grapes', 'Strawberries']
counts = [5, 3, 4, 2, 4, 6]

source = ColumnDataSource(data=dict(fruits=fruits, counts=counts))

p = figure(x_range=fruits, plot_height=350, toolbar_location=None, title="Fruit Counts")
p.vbar(x='fruits', top='counts', width=0.9, source=source, legend_field="fruits",
       line_color='white', fill_color=factor_cmap('fruits', palette=Spectral6, factors=fruits))

p.xgrid.grid_line_color = None
p.y_range.start = 0
p.y_range.end = 9
p.legend.orientation = "horizontal"
p.legend.location = "top_center"

show(p)
'''
