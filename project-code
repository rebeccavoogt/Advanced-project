from bokeh.plotting import figure, output_file, show
import matplotlib
import matplotlib.pyplot as plt
import numpy as np
import pandas as pd
from numpy import genfromtxt

inputfile = input("Please input the path to your csv file.")
with open(inputfile) as csvfile:
    print("It worked!")
    print("Graphs should appear in your browser.")
    myarray = genfromtxt(inputfile, delimiter=',')

# Scatterplot
# output to static HTML file
output_file("scatter.html")

p = figure(plot_width=400, plot_height=400)

# add a circle renderer with a size, color, and alpha
p.circle(myarray[:,0], myarray[:,1], size=10, color="navy", alpha=0.5)
p.circle(myarray[:,0], myarray[:,2], size=20, color='purple', alpha=0.5)
p.circle(myarray[:,0], myarray[:,3], size=5, color='orange', alpha=0.5)
p.circle(myarray[:,0], myarray[:,4], size=10, color="firebrick", alpha=0.5)
p.circle(myarray[:,0], myarray[:,5], size=20, color='lime', alpha=0.5)
p.circle(myarray[:,0], myarray[:,6], size=5, color='aqua', alpha=0.5)
# show the results
show(p)

#Line Graph
output_file("patch.html")

y = figure(plot_width=400, plot_height=400)

y.multi_line([myarray[:,0], myarray[:,0]], [myarray[:,4], myarray[:,5]],
             color=["firebrick", "purple"], alpha=[0.5, 0.5], line_width=4)

show(y)
